<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:scrollbars="vertical"
        android:padding="@dimen/margin_1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_18">
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_6"
            android:layout_marginRight="@dimen/margin_6"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"
            android:visibility="gone"
            android:paddingLeft="@dimen/margin_6"
            android:text="Registration"
            android:textSize="@dimen/margin_24"
            android:textStyle="bold" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TIName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorBluenila"
            android:layout_margin="@dimen/margin_6"
            android:elevation="@dimen/margin_6">

            <EditText
                android:id="@+id/eduserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorGray"
                android:drawableRight="@drawable/ic_baseline_account_circle_24"
                android:hint="NAME"
                android:enabled="false"
                android:paddingLeft="@dimen/margin_10"
                android:textColor="@color/black"
                android:paddingRight="@dimen/margin_20" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TImobile"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_6"
            android:elevation="@dimen/margin_6"
            android:textColorHint="@color/colorBluenila">

            <EditText
                android:id="@+id/edUserMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_baseline_phone_android_24"
                android:backgroundTint="@color/colorGray"
                android:hint="MOBILE "
                android:maxLength="13"
                android:textColor="@color/black"
                android:inputType="number"
                android:paddingLeft="@dimen/margin_10" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TIMail"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_6"
            android:textColorHint="@color/colorBluenila"
            android:elevation="@dimen/margin_6">

            <EditText
                android:id="@+id/edSubscribeCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:backgroundTint="@color/colorGray"
                android:drawableRight="@drawable/ic_baseline_email_24"
                android:textColor="@color/black"
                android:hint="SUBSCRIBE CODE "
                android:paddingLeft="@dimen/margin_10" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TIPwd"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_6"

            android:textColorHint="@color/colorBluenila"
            android:elevation="@dimen/margin_6">

            <EditText
                android:id="@+id/edSubAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorGray"
                android:textColor="@color/black"
                android:enabled="false"
                android:drawableRight="@drawable/ic_baseline_vpn_key_24"
                android:hint="AMOUNT"
                android:paddingLeft="@dimen/margin_10" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TIConfirmPwd"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_6"
            android:visibility="gone"


            android:elevation="@dimen/margin_6" android:textColorHint="@color/colorBluenila">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorGray"
                android:hint="Confirm Password"
                android:textColor="@color/colorBluenila"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/margin_10" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TIRefer"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_6"


            android:elevation="@dimen/margin_6"
            android:textColorHint="@color/colorBluenila">

            <EditText
                android:id="@+id/edReferCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:drawableRight="@drawable/ic_baseline_phone_android_24"
                android:backgroundTint="@color/colorGray"
                android:hint="REFERRAL MOBILE NO"
                android:maxLength="10"
                android:enabled="false"
                android:inputType="number"
                android:paddingLeft="@dimen/margin_10" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TIReferName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_6"


            android:elevation="@dimen/margin_6"
            android:textColorHint="@color/colorBluenila">

            <EditText
                android:id="@+id/edReferalName"
                android:layout_width="match_parent"
                android:enabled="false"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_baseline_account_circle_24"
                android:textColor="@color/black"
                android:backgroundTint="@color/colorGray"
                android:hint="REFERRAL NAME"

                android:paddingLeft="@dimen/margin_10" />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:gravity="center">
            <TextView
                android:id="@+id/tvLogIn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/margin_2"
                android:background="@drawable/green_button_background"
                android:gravity="center"
                android:padding="@dimen/margin_10"
                android:text="SUBSCRIBE"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tvSignUp"
                android:layout_width="0dp"
                android:layout_margin="@dimen/margin_2"
                android:background="@drawable/red_button_background"                    android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/margin_10"
                android:text="BACK"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>

