<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/margin_6"
    android:layout_margin="@dimen/margin_4"
    android:layout_height="wrap_content">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:padding="@dimen/margin_6"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100sp"
            android:id="@+id/ivAppLogo"
            android:src="@drawable/defa"
            android:padding="@dimen/margin_10"
            android:layout_height="100sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/ivAppLogo"
            android:paddingLeft="@dimen/margin_8"
            android:id="@+id/tvAppName"
            android:textStyle="bold"
            android:text="SRUSHTII APP"
            android:layout_margin="@dimen/margin_1"


            android:textColor="@color/black"
            android:textSize="@dimen/margin_16"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/ivAppLogo"
            android:paddingLeft="@dimen/margin_8"
            android:layout_margin="@dimen/margin_1"
            android:id="@+id/tvDescription"
            android:text="ONLINE STORE AND SAVING GROUP"
            android:layout_below="@+id/tvAppName"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/ivAppLogo"
            android:paddingLeft="@dimen/margin_8"
            android:id="@+id/tvAmount"
            android:layout_margin="@dimen/margin_1"

            android:text="Install refer and  get RS 15+"
            android:layout_below="@+id/tvDescription"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/ivAppLogo"
            android:paddingLeft="@dimen/margin_8"
            android:paddingRight="@dimen/margin_8"
            android:paddingTop="@dimen/margin_2"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/margin_2"
            android:textStyle="bold"
            android:id="@+id/tvDownload"
            android:layout_margin="@dimen/margin_1"
            android:background="@drawable/border_layout_selected"
            android:text="Download"
            android:layout_below="@+id/tvAmount"
            android:layout_height="wrap_content"/>



    </RelativeLayout>
</androidx.cardview.widget.CardView>