<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/margin_10"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:padding="@dimen/margin_10"
        android:textSize="@dimen/margin_24"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/tvTitle"
        android:text="ADD DEPOSIT"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/tvTitle"
        android:backgroundTint="@color/white"
        android:background="@drawable/border_layout"
        android:id="@+id/tilAmount"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/edAmount"
            android:hint="Amount "
            android:textStyle="bold"
            android:paddingLeft="@dimen/margin_8"
            android:textSize="@dimen/margin_24"
            android:drawableLeft="@drawable/inrrr"
            android:maxLength="6"
            android:inputType="number"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tandc"
        android:padding="@dimen/margin_10"
        android:textColor="@color/blue"
        android:textSize="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_below="@+id/tilAmount"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/tandc"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tvplan1"
            android:background="@drawable/red_button_background"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="@dimen/margin_10"
            android:layout_margin="@dimen/margin_1"
            android:text="3  Month       5%  Profit share per month "
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tvplan2"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="@dimen/margin_1"
            android:background="@drawable/red_button_background"
            android:padding="@dimen/margin_10"
            android:text="6  Month       8%  Profit share per month "            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:background="@drawable/red_button_background"
            android:layout_margin="@dimen/margin_1"
            android:id="@+id/tvplan3"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="@dimen/margin_10"
            android:text="12 Month       10%  Profit share per month "            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/radioGroup"
        android:layout_marginTop="@dimen/margin_4"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin_6"
            android:text="PROCEED "
            android:id="@+id/btnYes"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/green_button_background"
            android:layout_height="wrap_content">

        </Button>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:id="@+id/btnCancel"
            android:textStyle="bold"
            android:layout_margin="@dimen/margin_6"
            android:text="CANCEL "
            android:background="@drawable/red_button_background"
            android:layout_height="wrap_content">

        </Button>
    </LinearLayout>

</RelativeLayout>