<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="@dimen/margin_4"
            app:cardCornerRadius="@dimen/margin_6"

            android:id="@+id/linear"

            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="110sp"
                    android:padding="@dimen/margin_10"
                    android:src="@drawable/defa"
                    android:id="@+id/ivStore"
                    android:layout_height="110sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/margin_4"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:padding="@dimen/margin_4"
                        android:textSize="@dimen/margin_16"
                        android:textStyle="bold"
                        android:id="@+id/tvStoreName"
                        android:text="NILESH KALOKHE"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:drawableLeft="@drawable/ic_baseline_date_range_24"
                        android:id="@+id/tvShopMobile"
                        android:padding="@dimen/margin_2"
                        android:drawablePadding="@dimen/margin_10"
                        android:textSize="@dimen/margin_16"
                        android:text="9636963696"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:padding="@dimen/margin_2"
                        android:drawablePadding="@dimen/margin_10"
                        android:textSize="@dimen/margin_16"
                        android:drawableLeft="@drawable/ic_baseline_location_on_24"
                        android:id="@+id/tvShopAddress"
                        android:text="Address"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <com.tech.aicapital.ExpandableHeightGridView
            android:layout_width="match_parent"
            android:id="@+id/gridView"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginBottom="@dimen/margin_60"
            android:numColumns="3"
            android:layout_below="@+id/linear"
            android:padding="@dimen/margin_2"
            android:layout_height="match_parent">
        </com.tech.aicapital.ExpandableHeightGridView>







    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
