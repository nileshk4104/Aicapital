<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_4"
        android:elevation="@dimen/margin_8"
        android:id="@+id/card1"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/ivPlanImage"
            android:padding="@dimen/margin_10"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="XAUUSD"
                    android:id="@+id/tvEntity"
                    android:padding="@dimen/margin_6"
                    android:gravity="left|center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/margin_20"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/margin_4"
                    android:textSize="@dimen/margin_12"
                    android:padding="@dimen/margin_6"
                    android:id="@+id/tvLotSize"
                    android:textColor="@color/red"
                    android:gravity="left|center"
                    android:text=" sell 0.06"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_6"
                    android:text="1850.89"
                    android:textSize="@dimen/margin_20"
                    android:id="@+id/tvTradeGain"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:gravity="right"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Open Position"
                    android:padding="@dimen/margin_4"
                    android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="1845.34"
                android:textStyle="bold"
                android:textSize="@dimen/margin_18"
                android:textColor="@color/black"
                android:padding="@dimen/margin_4"
                android:id="@+id/tvOpenTrade"
                android:layout_height="wrap_content"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Close Position"
                    android:padding="@dimen/margin_4"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="1850.89"
                    android:textSize="@dimen/margin_18"
                    android:textColor="@color/black"
                    android:padding="@dimen/margin_4"
                    android:id="@+id/tvCloseTrade"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Start Time"
                    android:padding="@dimen/margin_4"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="@dimen/margin_4"
                    android:textSize="@dimen/margin_18"
                    android:id="@+id/tvStartTime"
                    android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="End Time"
                android:padding="@dimen/margin_4"
                android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_4"
                    android:textStyle="bold"
                    android:textSize="@dimen/margin_18"
                    android:id="@+id/tvEndTime"
                    android:text="0"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Comission"
                    android:padding="@dimen/margin_4"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_4"
                    android:text="0.0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/margin_18"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>