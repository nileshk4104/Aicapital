<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/margin_4"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/margin_8"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvFollowup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is followup "
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRemark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvFollowup"
            android:text="This is remark"
            android:textColor="@color/red" />

       <LinearLayout
           android:layout_width="match_parent"
           android:id="@+id/l1"
           android:layout_below="@+id/tvRemark"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:textSize="@dimen/margin_12"
               android:text="Followup Date"
               android:layout_height="wrap_content"/>
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:textSize="@dimen/margin_12"

               android:id="@+id/tvFollowupDate"
               android:textColor="@color/black"

               android:text="12-09-2021"
               android:layout_height="wrap_content"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:id="@+id/l2"
           android:layout_below="@+id/l1"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:textSize="@dimen/margin_12"

               android:text="Next Remind"
               android:layout_height="wrap_content"/>
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:id="@+id/tvReminder"
               android:textSize="@dimen/margin_12"

               android:textColor="@color/black"
               android:text="12-09-2021"
               android:layout_height="wrap_content"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:id="@+id/l3"
           android:layout_below="@+id/l2"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:textSize="@dimen/margin_12"

               android:text="Calling"
               android:layout_height="wrap_content"/>
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:text="YES"
               android:textSize="@dimen/margin_12"
               android:textColor="@color/black"
               android:layout_height="wrap_content"/>
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:text="Whatsapp"
               android:textSize="@dimen/margin_12"
               android:layout_height="wrap_content"/>
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:text="YES"
               android:textSize="@dimen/margin_12"
               android:layout_height="wrap_content"/>
       </LinearLayout>



    </RelativeLayout>
</androidx.cardview.widget.CardView>