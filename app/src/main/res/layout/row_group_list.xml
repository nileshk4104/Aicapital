<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/margin_4"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="@dimen/margin_8"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/margin_60"
            android:id="@+id/ivGroupLogo"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="@dimen/margin_1"
            android:layout_height="@dimen/margin_60"/>

        <TextView
            android:id="@+id/tvGroupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivGroupLogo"
            android:fontFamily="@font/shanti"
            android:paddingLeft="@dimen/margin_6"
            android:text="Janardhan Saving Group"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_16"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvGroupDate"
            android:paddingLeft="@dimen/margin_6"
            android:textStyle="bold"
            android:text="Parner"
            android:layout_toRightOf="@+id/ivGroupLogo"
            android:layout_below="@+id/tvGroupName"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvSeeDetails"
            android:padding="@dimen/margin_2"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:text="See Details"
            android:visibility="gone"
            android:textColor="@color/green"
            android:layout_toRightOf="@+id/tvGroupDate"
            android:layout_below="@+id/tvGroupName"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvDaysRemain"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:paddingLeft="@dimen/margin_6"
            android:textSize="@dimen/margin_10"
            android:text="15 Day of every month"
            android:layout_toRightOf="@+id/ivGroupLogo"
            android:layout_below="@+id/tvGroupDate"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>