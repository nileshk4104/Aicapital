<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/margin_8"
    android:layout_margin="@dimen/margin_8"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"
            android:id="@+id/proImage"
            android:scaleType="fitXY"
            android:layout_height="100sp"/>
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_1"
            android:paddingRight="@dimen/margin_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tvUsername"
                android:text="SWABHIMAN ENTERPRISES"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingTop="@dimen/margin_9"
                android:paddingLeft="@dimen/margin_4"
                android:maxLines="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tvShopAddress"
                android:textSize="@dimen/margin_10"
                android:maxLines="2"
                android:paddingLeft="@dimen/margin_4"
                android:text="Address"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tvUserId"
                android:textSize="@dimen/margin_10"
                android:maxLines="2"
                android:paddingLeft="@dimen/margin_4"
                android:textColor="@color/green"
                android:text="Timing"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tvUserMobile"
                android:textColor="@color/red"
                android:text="8% Off"
                android:textStyle="bold"
                android:gravity="right"
                android:paddingRight="@dimen/margin_4"
                android:textSize="@dimen/margin_12"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="4.5"
                    android:paddingTop="@dimen/margin_1"
                    android:paddingBottom="@dimen/margin_1"
                    android:textStyle="bold"
                    android:textSize="@dimen/margin_12"
                    android:drawablePadding="@dimen/margin_4"
                    android:textColor="@color/white"
                    android:paddingRight="@dimen/margin_4"
                    android:background="@color/green"
                    android:paddingLeft="@dimen/margin_4"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="7"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:paddingTop="@dimen/margin_1"
                    android:paddingBottom="@dimen/margin_1"
                    android:textStyle="bold"
                    android:textSize="@dimen/margin_12"
                    android:drawablePadding="@dimen/margin_4"
                    android:paddingRight="@dimen/margin_4"
                    android:paddingLeft="@dimen/margin_8"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/margin_1"
                    android:id="@+id/isDeliver"
                    android:paddingBottom="@dimen/margin_1"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="No delivery"
                    android:textSize="@dimen/margin_10"
                    android:drawablePadding="@dimen/margin_4"
                    android:textColor="#5f00"
                    android:paddingRight="@dimen/margin_4"
                    android:paddingLeft="@dimen/margin_4"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/tvDateTime"
                    android:textColor="#9080"
                    android:textStyle="bold"
                    android:text="Min : Rs 299.00"
                    android:textSize="@dimen/margin_10"
                    android:layout_height="wrap_content"/>



            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvStatus"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:layout_gravity="center|top"
            android:textSize="@dimen/margin_8"
            android:text="Unverified"
            android:visibility="gone"
            android:layout_height="30sp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>

