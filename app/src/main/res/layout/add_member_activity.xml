<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:scrollbars="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin_18">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TIName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorBluenila"
                android:layout_margin="@dimen/margin_6"
                android:elevation="@dimen/margin_6">
                <EditText
                    android:id="@+id/eduserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorGray"
                    android:drawableRight="@drawable/ic_baseline_account_circle_24"
                    android:hint="Member Name "
                    android:paddingLeft="@dimen/margin_10"
                    android:textColor="@color/black"
                    android:paddingRight="@dimen/margin_20" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TImobile"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_6"
                android:elevation="@dimen/margin_6"
                android:textColorHint="@color/colorBluenila">
                <EditText
                    android:id="@+id/edUserMobile"
                    android:layout_width="match_parent"
                    android:drawableRight="@drawable/ic_baseline_phone_android_24"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorGray"
                    android:hint="Mobile "
                    android:maxLength="13"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:paddingLeft="@dimen/margin_10" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TIMail"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_6"
                android:textColorHint="@color/colorBluenila"
                android:elevation="@dimen/margin_6">

                <EditText
                    android:id="@+id/edEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_baseline_email_24"
                    android:backgroundTint="@color/colorGray"
                    android:textColor="@color/black"
                    android:hint="Email  "
                    android:paddingLeft="@dimen/margin_10" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TIPwd"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_6"
                android:textColorHint="@color/colorBluenila"
                android:elevation="@dimen/margin_6">
                <EditText
                    android:id="@+id/edPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorGray"
                    android:textColor="@color/colorBluenila"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/margin_10" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TIConfirmPwd"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_6"
                android:visibility="gone"
                android:elevation="@dimen/margin_6" android:textColorHint="@color/colorBluenila">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorGray"
                    android:hint="Confirm Password"
                    android:textColor="@color/colorBluenila"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/margin_10" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TIRefer"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_6"

                android:visibility="gone"

                android:elevation="@dimen/margin_6"
                android:textColorHint="@color/colorBluenila">

                <EditText
                    android:id="@+id/edReferCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_baseline_phone_android_24"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/colorGray"
                    android:hint="Refer code"
                    android:maxLength="10"
                    android:inputType="number"
                    android:paddingLeft="@dimen/margin_10" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TIReferName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_6"
                android:visibility="gone"


                android:elevation="@dimen/margin_6"
                android:textColorHint="@color/colorBluenila">

                <EditText
                    android:id="@+id/edReferalName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_baseline_account_circle_24"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/colorGray"
                    android:hint="Referral Name"
                    android:enabled="false"
                    android:paddingLeft="@dimen/margin_10" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:padding="@dimen/margin_18"
                android:id="@+id/tvWarning"
                android:text=""
                android:textSize="@dimen/margin_10"
                android:textColor="@color/red"
                android:gravity="center"
                android:layout_height="wrap_content">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvLogIn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#a5C0"
                    android:gravity="center"
                    android:padding="@dimen/margin_10"
                    android:text="Submit"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvSignUp"
                    android:layout_width="0dp"
                    android:background="#a00f"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/margin_10"
                    android:text="Sign in"
                    android:textColor="@color/white" />


            </LinearLayout>



        </LinearLayout>



    </RelativeLayout>


</ScrollView>