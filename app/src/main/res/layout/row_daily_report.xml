<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_1"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/margin_1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:text=" "

                android:id="@+id/tv_dates"
                android:textSize="@dimen/margin_10"
                android:textColor="@color/blue"
                android:padding="@dimen/margin_8"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/blue"
                android:id="@+id/tv_totalemi_paid"

                android:textSize="@dimen/margin_10"
                android:padding="@dimen/margin_8"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/green"
                android:id="@+id/tv_emi_paid"

                android:textSize="@dimen/margin_10"
                android:padding="@dimen/margin_8"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text=""
                android:id="@+id/tv_loan_paid"
                android:textColor="@color/green"

                android:textSize="@dimen/margin_10"
                android:padding="@dimen/margin_8"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text=""
                android:id="@+id/tv_intrest_paid"
                android:textColor="@color/green"

                android:textSize="@dimen/margin_10"
                android:padding="@dimen/margin_8"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text=""
                android:id="@+id/tv_fine_paid"
                android:textColor="@color/green"

                android:textSize="@dimen/margin_10"
                android:padding="@dimen/margin_8"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text=""
                android:id="@+id/tv_amt_distributed"

                android:textColor="@color/red"
                android:textSize="@dimen/margin_10"
                android:padding="@dimen/margin_8"
                android:layout_height="match_parent" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>