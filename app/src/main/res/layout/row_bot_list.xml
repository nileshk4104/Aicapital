<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_8"
    app:cardCornerRadius="@dimen/margin_8"
    android:layout_height="wrap_content">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_12">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="3"
        android:padding="@dimen/margin_2"
        android:layout_height="wrap_content"
        android:text="SUPER GOLD EXTREME"
        android:textColor="@color/black"
        android:id="@+id/tvBotName"
        android:textSize="@dimen/margin_18"
        android:textStyle="bold" />

</LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/margin_20"
                    android:textStyle="bold"
                    android:id="@+id/tvProfitPer"
                    android:text="+ 61.44%"
                    android:textColor="@color/green_color" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="500$"
                    android:textSize="@dimen/margin_20"
                    android:textStyle="bold"
                    android:id="@+id/tvMinDeposit"
                    android:textColor="@color/black" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/margin_10"
                    android:text="Average Profit"
                    android:textColor="@color/colorGray2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Min. Deposit"
                    android:textSize="@dimen/margin_10"

                    android:textColor="@color/colorGray2" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="52 / 0.02"
                    android:visibility="gone"
                    android:id="@+id/tvLotPerTrade"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$0"
                    android:textStyle="bold"
                    android:id="@+id/tvFees"
                    android:textSize="@dimen/margin_18"
                    android:textColor="@color/black" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/margin_10"
                    android:visibility="gone"

                    android:text="weekly trades"
                    android:textColor="@color/colorGray2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/margin_10"

                    android:id="@+id/tvFeesType"
                    android:text="Yearly Fees"
                    android:textColor="@color/colorGray2" />


            </LinearLayout>
        <TextView
            android:layout_width="100sp"
            android:layout_weight="1"
            android:padding="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_height="wrap_content"
            android:background="#FF7700"
            android:text="Active"
            android:gravity="center"
            android:layout_gravity="right"
            android:textColor="@color/white"
            android:id="@+id/tvBotStatus"
            android:textSize="@dimen/margin_12"
            android:textStyle="bold" />

    </LinearLayout>




</androidx.cardview.widget.CardView>