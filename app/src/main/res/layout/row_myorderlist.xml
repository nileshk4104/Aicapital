<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_6"
        app:cardCornerRadius="@dimen/margin_6"
        android:layout_marginRight="@dimen/margin_6"
        android:layout_marginTop="@dimen/margin_12"
        android:layout_marginBottom="@dimen/margin_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_4"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtcustomername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginLeft="@dimen/margin_4"
                android:layout_marginRight="@dimen/margin_2"
                android:text="  "
                android:textColor="@color/black"
                android:textSize="@dimen/margin_18"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_4"
                android:layout_marginRight="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtorerno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textStyle="bold"
                    android:gravity="center|left"
                    android:text="Order no "
                    android:textColor="@color/black"
                    android:textSize="@dimen/margin_12" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:id="@+id/datesss"
                    android:paddingLeft="@dimen/margin_6"
                    android:gravity="center|left"
                    android:textColor="@color/black"
                    android:textSize="@dimen/margin_12" />
            </LinearLayout>
            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  "
                android:layout_marginLeft="@dimen/margin_4"
                android:textColor="@color/black"
                android:textSize="@dimen/margin_12"
                />
            <TextView
                android:id="@+id/txtAddress2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="  "
                android:layout_marginLeft="@dimen/margin_4"
                android:textColor="@color/black"
                android:textSize="@dimen/margin_12"
                />
            <TextView
                android:id="@+id/txtDeleverydate"
                android:layout_width="match_parent"
                android:padding="@dimen/margin_4"

                android:layout_height="wrap_content"
                android:text="Deliver On 23/11/2019"
                android:textStyle="bold"
                android:textColor="@color/green_color"
                android:gravity="right"
                android:textSize="@dimen/margin_12"
                />





            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_2"
                android:background="@color/colorGray"
                android:layout_height="1sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:text="Product Name"
                    android:padding="@dimen/margin_2"
                    android:gravity="center|left"
                    android:textColor="@color/blue"
                    android:layout_weight="5"   android:textStyle="bold"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="Price"
                    android:textColor="@color/blue"
                    android:gravity="center|left"

                    android:padding="@dimen/margin_2"
                    android:layout_weight="2"   android:textStyle="bold"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="Qty"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:gravity="center|left"

                    android:padding="@dimen/margin_2"
                    android:layout_weight="2"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="Total"   android:textStyle="bold"
                    android:padding="@dimen/margin_2"
                    android:textColor="@color/blue"
                    android:gravity="center"

                    android:layout_weight="2"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_2"
                android:background="@color/colorGray"
                android:layout_height="1sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dynamicLayout"
                android:layout_marginTop="@dimen/margin_6"
                android:layout_weight="5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/margin_4"
                    android:paddingBottom="@dimen/margin_4"
                    android:id="@+id/horizontalLayout"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/txtProductname"
                        android:gravity="left|center"
                        android:textSize="@dimen/margin_10"
                        android:textColor="@color/black"
                        android:layout_weight="5"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/txtProPrice"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textSize="@dimen/margin_12"

                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/txtProquantity"
                        android:gravity="center"
                        android:textSize="@dimen/margin_12"

                        android:layout_weight="2"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/txtTotal"
                        android:gravity="right"
                        android:textSize="@dimen/margin_12"

                        android:layout_weight="2"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_margin="@dimen/margin_6"
                android:background="@color/colorGray"
                android:layout_height="1sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100sp"
                    android:id="@+id/ivDelevered"
                    android:layout_height="100sp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin_6"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_6"
                            android:layout_marginBottom="@dimen/margin_4"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text="Total Amount "
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:id="@+id/totalCost"
                            android:textColor="@color/black"
                            android:gravity="center|right"
                            android:layout_marginBottom="@dimen/margin_4"
                            android:paddingRight="@dimen/margin_6"
                            android:textStyle="bold"
                            android:text="520"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:layout_marginBottom="@dimen/margin_4"
                            android:layout_marginLeft="@dimen/margin_6"
                            android:textStyle="bold"
                            android:text="Delivery Charges "
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:id="@+id/totalDeleveryCost"
                            android:gravity="center|right"
                            android:textColor="@color/black"
                            android:layout_marginBottom="@dimen/margin_4"
                            android:paddingRight="@dimen/margin_6"
                            android:textStyle="bold"
                            android:text=" 5"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:layout_marginBottom="@dimen/margin_4"
                            android:layout_marginLeft="@dimen/margin_6"
                            android:textStyle="bold"
                            android:textSize="@dimen/margin_18"
                            android:textColor="@color/black"
                            android:text="Net Total  "
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:id="@+id/nettotalCost"
                            android:gravity="center|right"
                            android:textColor="@color/black"
                            android:layout_marginBottom="@dimen/margin_4"
                            android:textSize="@dimen/margin_18"
                            android:paddingRight="@dimen/margin_6"
                            android:textStyle="bold"
                            android:text="525"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:id="@+id/orderStatus"
                            android:visibility="gone"
                            android:background="#EEFFEE"
                            android:gravity="center"
                            android:layout_marginBottom="@dimen/margin_4"
                            android:layout_marginLeft="@dimen/margin_6"
                            android:textStyle="bold"
                            android:text="Processing"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_4"
                        android:layout_marginRight="@dimen/margin_1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:paddingLeft="@dimen/margin_6"
                            android:gravity="center|right"
                            android:text="Payment Type  "
                            android:textStyle="bold"
                            android:textSize="@dimen/margin_14" />

                        <TextView
                            android:id="@+id/txtpaytype"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:paddingRight="@dimen/margin_6"
                            android:text="Online"
                            android:textStyle="bold"
                            android:gravity="right"
                            android:textColor="@color/black"
                            android:textSize="@dimen/margin_14"
                            />



                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_margin="@dimen/margin_6"
                android:background="@color/colorGray"
                android:layout_height="1sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center|left"
                android:id="@+id/orderNaming"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="@dimen/margin_10"
                    android:text="Order Placed"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingRight="@dimen/margin_18"

                    android:text="Packed"
                    android:textSize="@dimen/margin_10"

                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_24"
                    android:text="Shipped "
                    android:textSize="@dimen/margin_10"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="@dimen/margin_10"
                    android:text="Delivered"
                    android:layout_height="wrap_content"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center|left"
                android:id="@+id/orderGraphics"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="20sp"
                    android:id="@+id/view1"
                    android:background="@drawable/border_green_color"
                    android:layout_height="@dimen/margin_20">
                </View>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/viewDash1"
                    android:background="@drawable/straight_forward"
                    android:layout_height="@dimen/margin_10">
                </View>

                <View
                    android:layout_width="20sp"
                    android:id="@+id/view2"
                    android:background="@drawable/border_blackcolor"
                    android:layout_height="@dimen/margin_20"></View>
                <View
                    android:layout_width="0dp"
                    android:id="@+id/viewDash2"
                    android:layout_weight="1"
                    android:background="@drawable/straight_forward_gray"
                    android:layout_height="@dimen/margin_10"></View>


                <View
                    android:layout_width="20sp"
                    android:id="@+id/view3"
                    android:background="@drawable/border_blackcolor"
                    android:layout_height="@dimen/margin_20">

                </View>

                <View
                    android:layout_width="0dp"
                    android:id="@+id/viewDash3"

                    android:layout_weight="1"
                    android:background="@drawable/straight_forward_gray"
                    android:layout_height="@dimen/margin_10"></View>
                <View
                    android:layout_width="20sp"
                    android:id="@+id/view4"
                    android:background="@drawable/border_blackcolor"
                    android:layout_height="@dimen/margin_20"></View>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_marginBottom="@dimen/margin_6"
                android:layout_gravity="center"
                android:gravity="left"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/rtbProductRating"
                    android:layout_height="39dp"
                    android:visibility="gone"
                    android:layout_width="180dp"

                    android:numStars="5"
                    android:scaleX="0.5"

                    android:scaleY="0.5"
                    android:layout_gravity="left"
                    android:progressTint="@color/orange"
                    android:rating="4.5"
                    android:isIndicator="true"

                    />



                <TextView
                    android:id="@+id/btnCancelorder"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/text_size22"
                    android:textSize="@dimen/margin_12"
                    android:layout_margin="@dimen/margin_6"
                    android:textStyle="bold"
                    android:padding="@dimen/margin_2"

                    android:gravity="center"
                    android:text=" Cancel Order " />
                <Button
                    android:id="@+id/btnDelDate"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/text_size22"
                    android:textSize="@dimen/margin_12"
                    android:layout_margin="@dimen/margin_6"
                    android:visibility="gone"
                    android:textStyle="bold"

                    android:background="@color/white"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="12-12-2019 " />

                <Button
                    android:id="@+id/btnDeleteorder"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="0.2"
                    android:visibility="gone"

                    android:drawableTint="@color/blue"
                    android:gravity="center"
                    android:hint="Delete"
                    android:text="" />

                <Button
                    android:layout_width="wrap_content"
                    android:text=""
                    android:textSize="@dimen/margin_14"
                    android:visibility="gone"

                    android:id="@+id/btnEditorder"
                    android:hint="Delivered"
                    android:drawableTint="@color/blue"
                    android:gravity="center"
                    android:layout_gravity="right|center"
                    android:layout_height="22sp"
                    />

            </LinearLayout>

        </LinearLayout>





    </androidx.cardview.widget.CardView>
</RelativeLayout>