<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_4"
        android:elevation="@dimen/margin_8"
        android:id="@+id/card1"
        app:cardCornerRadius="@dimen/margin_10"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/ivPlanImage"
            android:paddingTop="@dimen/margin_6"
            android:paddingBottom="@dimen/margin_6"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="@dimen/margin_4"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Plan "
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:id="@+id/tvUserName"
                    android:paddingLeft="@dimen/margin_4"
                    android:paddingTop="@dimen/margin_4"
                    android:textSize="@dimen/margin_14"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="Plan "
                    android:maxLines="1"
                    android:id="@+id/tvPlanTitle"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/margin_4"
                    android:paddingTop="@dimen/margin_4"
                    android:textSize="@dimen/margin_14"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/margin_4"
                    android:textSize="@dimen/margin_12"
                    android:id="@+id/tvPlanAmount"
                    android:textColor="@color/green"
                    android:maxLines="1"
                    android:text="50000/-"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/margin_4"
                    android:textSize="@dimen/margin_12"
                    android:id="@+id/tvStatus"
                    android:textColor="@color/colorGray2"
                    android:text="Pending"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="20dp"

                        android:id="@+id/srcoin"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/margin_20"/>
                    <TextView
                        android:layout_width="0dp"
                        android:text="Rs 00000000"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/margin_12"
                        android:id="@+id/tvActivateOffer"
                        android:layout_marginTop="@dimen/margin_6"
                        android:layout_marginBottom="@dimen/margin_6"
                        android:padding="@dimen/margin_4"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="20 left "
                        android:id="@+id/tvLeft"
                        android:textSize="@dimen/margin_10"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/margin_6"
                        android:layout_marginBottom="@dimen/margin_6"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="REEDIM"
                        android:background="@drawable/border_layout_selected"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/margin_12"
                        android:paddingRight="@dimen/margin_12"
                        android:paddingTop="@dimen/margin_2"
                        android:paddingBottom="@dimen/margin_2"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:id="@+id/tvTotal"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="80sp"
                android:layout_margin="@dimen/margin_4"
                android:src="@drawable/defa"
                android:id="@+id/ivProductImage"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>