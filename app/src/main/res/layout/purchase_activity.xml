<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/lfone"
                android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="RECIEPT"
                        android:background="@color/black"
                        android:gravity="center"
                        android:textSize="@dimen/margin_18"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="70sp"
                            android:src="@mipmap/ic_launcher"
                            android:padding="@dimen/margin_6"
                            android:layout_height="70sp">

                        </ImageView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:textStyle="bold"
                                android:textSize="@dimen/margin_20"
                                android:textColor="@color/black"
                                android:text="SRUSHTII DIGITAL APP LLP"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:textStyle="bold"
                                android:textSize="@dimen/margin_9"
                                android:text="www.srushtii.com Email - info@srushtii.com Tel- +917218740825"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/black"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_4"
                    android:layout_height="1sp"/>


                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/ivBarcode"
                    android:layout_height="@dimen/margin_40"/>


                <LinearLayout
                        android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/margin_8"
                        android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1.25"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:textColor="@color/black"
                                    android:text="ORDER NUMBER "
                                    android:padding="@dimen/margin_4"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:textColor="@color/black"
                                    android:text="ORDER DATE"
                                    android:padding="@dimen/margin_4"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:textColor="@color/black"
                                    android:text="LOCATION"
                                    android:padding="@dimen/margin_4"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:textColor="@color/black"
                                    android:text="CUSTOMER NAME "
                                    android:padding="@dimen/margin_4"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:padding="@dimen/margin_4"
                                    android:textColor="@color/black"
                                    android:text="VENDOR NAME"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:padding="@dimen/margin_4"
                                    android:textColor="@color/black"
                                    android:text="GST NUMBER "
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/black"
                                    android:padding="@dimen/margin_4"
                                    android:text="PROFIT BONUS"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:padding="@dimen/margin_4"
                                    android:textColor="@color/black"
                                    android:text="RESELL TENURE"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:padding="@dimen/margin_4"
                                    android:textColor="@color/black"
                                    android:text="PAYMENT DATE"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/margin_4"
                                    android:layout_weight="1"
                                    android:text="ORDER STATUS "
                                    android:textColor="@color/black" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/margin_4"
                                    android:text="PRODUCT NAME "
                                    android:textColor="@color/black" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/margin_4"
                                    android:text="DESCRIPTION"
                                    android:textColor="@color/black" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/margin_4"
                                    android:text="AMOUNT"
                                    android:textColor="@color/black" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/margin_4"
                                    android:text="SERVICE TAX"
                                    android:textColor="@color/black" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:textSize="@dimen/margin_20"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/margin_4"
                                    android:textStyle="bold"
                                    android:text="TOTAL"
                                    android:textColor="@color/black" />
                                <View
                                    android:layout_width="match_parent"
                                    android:background="@color/black"
                                    android:layout_marginTop="@dimen/margin_10"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    android:layout_height="1sp"/>




                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="2"
                                    android:textColor="@color/red"
                                    android:id="@+id/tvOrderNo"
                                    android:padding="@dimen/margin_4"
                                    android:textStyle="bold"
                                    android:text="20201109125"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="2"
                                    android:textStyle="bold"
                                    android:id="@+id/tvOrderDate"
                                    android:padding="@dimen/margin_4"
                                    android:text="11 MAY 2020 11:30"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="2"
                                    android:textStyle="bold"
                                    android:id="@+id/tvOrderLocation"
                                    android:padding="@dimen/margin_4"
                                    android:text="SHIRUR"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="2"
                                    android:text="Nilesh Kalokhe "
                                    android:id="@+id/tvCustomerName"
                                    android:padding="@dimen/margin_4"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="2"
                                    android:padding="@dimen/margin_4"
                                    android:id="@+id/tvVenderName"
                                    android:text="APBILLIONAIRES HUB PVT.LTD"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="2"
                                    android:text="---"
                                    android:id="@+id/tvGstNo"
                                    android:padding="@dimen/margin_4"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="2"
                                    android:padding="@dimen/margin_4"
                                    android:id="@+id/tvProfitPer"
                                    android:text="8 % PER MONTH"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="2"
                                    android:padding="@dimen/margin_4"
                                    android:text="6 MONTH"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="2"
                                    android:text="27 JAN 2020"
                                    android:id="@+id/tvTenure"
                                    android:padding="@dimen/margin_4"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="2"
                                    android:id="@+id/tvOrderStatus"
                                    android:text="pending"
                                    android:padding="@dimen/margin_4"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="2"
                                    android:text=" --- "
                                    android:padding="@dimen/margin_4"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="2"
                                    android:text=" --- "
                                    android:id="@+id/tvProductName"
                                    android:padding="@dimen/margin_4"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="2"
                                    android:text="50000"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:id="@+id/tvAmount"
                                    android:padding="@dimen/margin_4"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="2"
                                    android:text="100"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:id="@+id/tvServiceTax"
                                    android:padding="@dimen/margin_4"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="2"
                                    android:text="50100"
                                    android:textSize="@dimen/margin_20"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:id="@+id/tvTotalAmount"
                                    android:padding="@dimen/margin_4"
                                    android:layout_height="wrap_content"/>


                                <View
                                    android:layout_width="match_parent"
                                    android:background="@color/black"
                                    android:id="@+id/tvProDescription"
                                    android:layout_marginTop="@dimen/margin_10"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    android:layout_height="1sp"/>


                            </LinearLayout>
                        </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="60sp"
                        android:src="@drawable/srushtistamp"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:layout_height="60sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="right"
                            android:textStyle="bold"
                            android:paddingRight="@dimen/margin_8"
                            android:textColor="#5500AA"
                            android:text=" SRUSHTI DIGITAL APP LLP"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="right"
                            android:textColor="#5500AA"
                            android:paddingRight="@dimen/margin_8"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/margin_20"
                            android:text="EXECUTIVE DIRECTOR "
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/amount_refund"
                    android:padding="@dimen/margin_20"
                    android:layout_height="wrap_content"/>

                <CheckBox
                            android:layout_width="match_parent"
                            android:text="Agree -  Terms and Condition "
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_marginBottom="@dimen/margin_60"
                            android:padding="@dimen/margin_14"
                            android:background="@drawable/blue_button_background"
                            android:layout_height="wrap_content"/>
            </LinearLayout>
    </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/btnViewPrivacy"
                    android:text="View Privacy Policy"
                    android:layout_margin="@dimen/margin_2"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/red_button_background"
                    android:layout_height="wrap_content"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_2"
                    android:text="PAY AND DOWNLOAD"
                    android:id="@+id/btnProceed"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/green_button_background"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


    </RelativeLayout>
