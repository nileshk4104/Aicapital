<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_6"
        android:id="@+id/cardView"
        app:cardCornerRadius="@dimen/margin_18"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/relScratchCard"
            android:layout_height="179sp">
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="120dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/reward"
                android:id="@+id/reward"
                android:layout_height="@dimen/margin_90"/>
            <ImageView
                android:layout_width="@dimen/margin_90"
                android:layout_centerHorizontal="true"
                android:src="@drawable/srcoins"
                android:layout_below="@+id/reward"
                android:padding="@dimen/margin_9"
                android:visibility="gone"
                android:id="@+id/rewardCoin"
                android:layout_height="@dimen/margin_90"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|top"
                android:padding="@dimen/margin_8"
                android:layout_below="@+id/rewardCoin"
                android:textSize="@dimen/margin_16"
                android:textColor="#000000"
                android:drawablePadding="@dimen/margin_10"
                android:layout_centerInParent="true"
                android:text="YOU EARNED \n Rs 20/-" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>