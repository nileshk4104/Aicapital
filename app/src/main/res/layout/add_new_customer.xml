<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:scrollbars="vertical"
    android:layout_gravity="center"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:padding="@dimen/margin_2"
            android:id="@+id/tvBackButton"
            android:visibility="gone"
            android:layout_marginTop="@dimen/margin_24"
            android:background="@drawable/border_layout_selected"
            android:layout_marginLeft="@dimen/margin_10"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
            android:layout_height="wrap_content">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin_18">

            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_6"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_6"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_6"
                android:text="Registration"
                android:textSize="@dimen/margin_24"
                android:textStyle="bold"
                android:visibility="gone" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TIName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_6"
                android:elevation="@dimen/margin_6"
                android:textColorHint="@color/colorGray">

                <EditText
                    android:id="@+id/eduserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorGray"
                    android:drawableRight="@drawable/ic_baseline_account_circle_24"
                    android:hint="Full Name"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_20"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TImobile"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_6"
                android:elevation="@dimen/margin_6"
                android:textColorHint="@color/colorGray">

                <EditText
                    android:id="@+id/edUserMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorGray"
                    android:drawableRight="@drawable/ic_baseline_phone_android_24"
                    android:hint="Mobile "
                    android:inputType="number"
                    android:maxLength="13"
                    android:paddingLeft="@dimen/margin_10"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TIMail"
                android:layout_width="match_parent"
                android:background="@drawable/border_layout"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_6"
                android:elevation="@dimen/margin_6"
                android:textColorHint="@color/colorGray">
                <TextView
                    android:id="@+id/edEducation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorGray"
                    android:drawableRight="@drawable/ic_baseline_school_24"
                    android:hint="Education  "
                    android:padding="@dimen/margin_10"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TIPwd"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_6"

                android:elevation="@dimen/margin_6"
                android:textColorHint="@color/colorGray">

                <EditText
                    android:id="@+id/edWork"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorGray"
                    android:drawableRight="@drawable/ic_baseline_work_24"
                    android:hint="Work"
                    android:paddingLeft="@dimen/margin_10"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TIConfirmPwd"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_6"
                android:elevation="@dimen/margin_6"


                android:textColorHint="@color/colorGray"
                android:visibility="gone">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorGray"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/margin_10"
                    android:textColor="@color/colorGray" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TIRefer"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_6"


                android:elevation="@dimen/margin_6"
                android:textColorHint="@color/colorGray">

                <EditText
                    android:id="@+id/edMonthlyIncome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorGray"
                    android:drawableRight="@drawable/ic_baseline_currency_rupee_24"

                    android:hint="Monthly Income"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingLeft="@dimen/margin_10"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TIReferName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_6"
                android:elevation="@dimen/margin_6"
                android:textColorHint="@color/colorGray">

                <EditText
                    android:id="@+id/edReferalName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorGray"
                    android:drawableRight="@drawable/ic_baseline_account_circle_24"
                    android:hint="Referance"
                    android:paddingLeft="@dimen/margin_10"

                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_6">

                <TextView
                    android:id="@+id/tvDistrict"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_4"
                    android:layout_weight="1"
                    android:background="@drawable/border_layout"
                    android:backgroundTint="@color/white"

                    android:drawableLeft="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:padding="@dimen/margin_8"
                    android:text="Select District"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvTehasil"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_4"
                    android:visibility="gone"

                    android:layout_weight="1"
                    android:background="@drawable/border_layout"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:padding="@dimen/margin_8"
                    android:text="Select Tehasil"
                    android:textColor="@color/black" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvLogIn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_2"
                    android:layout_weight="1"
                    android:background="@drawable/green_button_background"
                    android:gravity="center"
                    android:padding="@dimen/margin_10"
                    android:text="SUBMIT"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvSignUp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_2"
                    android:layout_weight="1"
                    android:background="@drawable/red_button_background"
                    android:gravity="center"
                    android:padding="@dimen/margin_10"
                    android:text="BACK"
                    android:textColor="@color/white" />


            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>


</ScrollView>