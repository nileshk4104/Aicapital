<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#eeeeee"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:orientation="horizontal"
    app:cardCornerRadius="@dimen/margin_6"
    android:elevation="@dimen/margin_4"
    android:layout_margin="@dimen/margin_8"
    android:id="@+id/cardv"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/margin_2"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:padding="@dimen/margin_4"
            android:layout_margin="@dimen/margin_2"
            android:visibility="gone"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="0dp"
            android:id="@+id/ivProductImage"
            android:padding="@dimen/margin_8"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:paddingLeft="@dimen/margin_4"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_4"
                    android:text="Product name"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:id="@+id/tvProductname"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/margin_4"
                android:maxLines="1"
                android:textSize="@dimen/margin_12"
                android:text="Description"
                android:id="@+id/tvProductDescription"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingRight="@dimen/margin_8"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:paddingLeft="@dimen/margin_4"
                    android:text="852"
                    android:textStyle="bold"
                    android:paddingTop="@dimen/margin_1"
                    android:textColor="@color/black"
                    android:drawablePadding="@dimen/margin_4"
                    android:textSize="@dimen/margin_16"
                    android:id="@+id/tvPrice"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:background="@drawable/border_green_color"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/ivRemove"
                        android:gravity="center"
                        android:text="-"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="0dp"
                        android:padding="@dimen/margin_2"
                        android:layout_weight="1.1"
                        android:text="Add"
                        android:textStyle="bold"
                        android:id="@+id/tvQuantity"
                        android:layout_margin="@dimen/margin_1"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:padding="@dimen/margin_2"
                        android:layout_weight="1.1"
                        android:text="Add"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/tvQ"
                        android:visibility="gone"
                        android:layout_margin="@dimen/margin_1"
                        android:gravity="center"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:gravity="center"
                        android:id="@+id/ivAdd"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="+"
                        android:layout_height="wrap_content" />

                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingRight="@dimen/margin_8"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvunitValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/margin_4"

                    android:paddingLeft="@dimen/margin_4"
                    android:paddingTop="@dimen/margin_4"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/margin_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="  per "
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="liter "
                    android:id="@+id/tvunit"

                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="10 % Off  "
                    android:layout_marginLeft="@dimen/margin_24"
                    android:id="@+id/tvPriceDiscount"
                    android:textColor="@color/red"
                    android:gravity="center"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
    <ImageView
        android:layout_width="wrap_content"
        android:padding="@dimen/margin_4"
        android:layout_margin="@dimen/margin_2"
        android:layout_height="wrap_content" />

</RelativeLayout>