<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/margin_6"
    android:layout_margin="@dimen/margin_6"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/relativeLayout"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/ivImage"
        android:src="@drawable/defa"
        android:scaleType="fitXY"
        android:layout_height="200sp">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:padding="@dimen/margin_8"
        android:visibility="gone"
        android:textStyle="bold"
        android:background="#7030A0"
        android:text="STARTER PLAN "
        android:layout_below="@+id/ivImage"
        android:id="@+id/tv1"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:padding="@dimen/margin_8"
        android:background="#7030A0"
        android:layout_toRightOf="@+id/tv1"
        android:id="@+id/tvPrice"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_below="@+id/ivImage"
        android:text="RS 0.00"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:padding="@dimen/margin_8"
        android:gravity="center"
        android:background="#7030A0"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/tvPrice"
        android:id="@+id/tvSubscribeNow"
        android:layout_below="@+id/ivImage"
        android:text="SUBSCRIBE NOW"
        android:layout_height="wrap_content"/>

</RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/ivImage2"
        android:src="@mipmap/ic_add_mem"
        android:visibility="gone"
        android:scaleType="fitXY"
        android:layout_height="150sp">
    </ImageView>

</androidx.cardview.widget.CardView>