<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin_4"
            android:scaleType="fitXY"
            android:padding="@dimen/margin_10"
            android:id="@+id/ivShopImage"
            android:layout_height="100sp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tvShopName"
                android:textStyle="bold"
                android:textSize="@dimen/margin_20"
                android:textColor="@color/black"
                android:padding="@dimen/margin_4"
                android:text="Shop Name "
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:paddingLeft="@dimen/margin_4"
                android:text="5.0"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingRight="@dimen/margin_6"
                android:drawablePadding="@dimen/margin_4"
                android:background="@color/green"
                android:id="@+id/tvShopRating"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/margin_4"
                android:text="91 0000000000"
                android:id="@+id/tvShopMobile"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/margin_4"
        android:layout_marginTop="@dimen/margin_10"
        android:maxLines="2"
        android:padding="@dimen/margin_10"
        android:textColor="@color/black"
        android:gravity="center|left"
        android:text="-"
        android:id="@+id/tvShopAddress"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/margin_4"
        android:maxLines="2"
        android:padding="@dimen/margin_10"
        android:textColor="@color/black"
        android:gravity="center|left"
        android:text="-"
        android:id="@+id/tvShopTime"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/margin_4"
        android:maxLines="2"
        android:padding="@dimen/margin_10"
        android:textColor="@color/black"
        android:gravity="center|left"
        android:text="-"
        android:id="@+id/tvIsDelivery"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/margin_4"
        android:maxLines="2"
        android:padding="@dimen/margin_10"
        android:textColor="@color/green"
        android:gravity="center|left"
        android:text="-"
        android:textStyle="bold"
        android:id="@+id/tvMinOrder"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_10"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Call"
            android:background="@drawable/red_button_background"
            android:padding="@dimen/margin_10"
            android:gravity="center"
            android:layout_margin="@dimen/margin_1"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:text="WhatsApp Message"
            android:background="@drawable/green_button_background"
            android:padding="@dimen/margin_10"
            android:gravity="center"
            android:layout_margin="@dimen/margin_1"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RatingBar
        android:layout_width="wrap_content"
        android:padding="@dimen/margin_1"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/border_layout"
        android:numStars="5"
        android:id="@+id/ratingBar"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_10"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:hint="Comment ... "
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="Submit Review "
        android:background="@drawable/blue_button_background"
        android:padding="@dimen/margin_10"
        android:gravity="center"
        android:layout_margin="@dimen/margin_10"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>



</LinearLayout>
</ScrollView>