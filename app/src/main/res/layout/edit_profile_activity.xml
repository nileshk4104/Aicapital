<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/margin_20"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:background="@color/colorAccent"
                    android:layout_gravity="center"
                    android:src="@drawable/defa"
                    android:id="@+id/ivProfile"
                    android:layout_height="80dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="PROFILE PICTURE"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="@dimen/margin_4"
                    android:textSize="@dimen/margin_10"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/margin_12"
                android:id="@+id/LiSponser"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginRight="@dimen/margin_12"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/border_layout"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:drawablePadding="@dimen/margin_6"
                        android:maxLength="10"
                        android:enabled="false"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/float_transparent"
                        android:id="@+id/ed_usercode"
                        android:hint="Profile Code"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/border_layout"
                        android:layout_marginTop="@dimen/margin_4"
                        android:layout_marginRight="@dimen/margin_12"
                        android:layout_height="wrap_content"
                        android:id="@+id/textInputLayout">
                        <EditText
                            android:layout_width="match_parent"
                            android:hint="Enter Full Name"
                            android:drawablePadding="@dimen/margin_6"
                            android:singleLine="true"
                            android:backgroundTint="@color/float_transparent"
                            android:id="@+id/ed_first_name"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:backgroundTint="@color/white"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:layout_marginTop="@dimen/margin_4"
                        android:background="@drawable/border_layout"
                        android:layout_marginRight="@dimen/margin_12"
                        android:layout_height="wrap_content"
                        android:id="@+id/textInputSponserName">
                        <EditText
                            android:layout_width="match_parent"
                            android:hint="Sponser Name "
                            android:drawablePadding="@dimen/margin_6"
                            android:singleLine="true"

                            android:textColor="@color/black"
                            android:backgroundTint="@color/float_transparent"
                            android:id="@+id/ed_sponsername"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:backgroundTint="@color/white"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:layout_marginTop="@dimen/margin_4"
                        android:id="@+id/tilMobile"
                        android:background="@drawable/border_layout"
                        android:layout_marginRight="@dimen/margin_12"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:maxLength="10"
                            android:backgroundTint="@color/float_transparent"
                            android:drawablePadding="@dimen/margin_6"
                            android:id="@+id/ed_mobile_no"
                            android:hint="Enter your mobile no"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/border_layout"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:backgroundTint="@color/white"
                        android:layout_marginRight="@dimen/margin_12"
                        android:layout_marginTop="@dimen/margin_4"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="match_parent"
                            android:drawablePadding="@dimen/margin_6"
                            android:backgroundTint="@color/float_transparent"
                            android:id="@+id/ed_mail_id"
                            android:hint="Enter your mail id"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:hint="Date Of Birth ( DD - MM - YYYY )"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/border_layout"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:layout_marginRight="@dimen/margin_12"
                        android:layout_marginTop="@dimen/margin_4"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="match_parent"
                            android:textSize="@dimen/margin_16"
                            android:layout_marginTop="@dimen/margin_10"
                            android:backgroundTint="@color/white"
                            android:padding="@dimen/margin_10"
                            android:inputType="date"
                            android:drawablePadding="@dimen/margin_6"
                            android:id="@+id/tv_dob"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:hint="Aadhar Card"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_marginRight="@dimen/margin_12"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/border_layout"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:maxLength="12"
                        android:inputType="number"
                        android:backgroundTint="@color/white"
                        android:id="@+id/edAadhAR"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_marginRight="@dimen/margin_12"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_1"
                    android:scaleType="fitXY"
                    android:src="@drawable/defa"
                    android:id="@+id/ivAadhar1"
                    android:gravity="center"
                    android:layout_height="100sp"/>
                <ImageView
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/defa"
                    android:layout_margin="@dimen/margin_1"
                    android:id="@+id/ivAadhar2"
                    android:layout_weight="1"
                    android:layout_height="100sp"/>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Aadhar"
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_marginRight="@dimen/margin_12"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_2"
                android:id="@+id/button_update_aadhar"
                android:textColor="@color/white" />
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="@dimen/margin_10"
                android:text="Once you upload , cant change latter "
                android:layout_height="wrap_content"/>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/border_layout"
                    android:hint="Pan Card"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_marginRight="@dimen/margin_12"
                    android:layout_height="wrap_content">
                   <EditText
                    android:layout_width="match_parent"
                       android:backgroundTint="@color/white"
                    android:id="@+id/edPanCard"
                    android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/ivPancard"
                android:visibility="gone"
                android:scaleType="fitXY"
                android:gravity="center"
                android:layout_height="180sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone"
                android:text="Aadhar Card front"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Pan"
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_marginRight="@dimen/margin_12"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_2"
                android:id="@+id/button_update_pan"
                android:textColor="@color/white" />
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="@dimen/margin_10"
                android:visibility="gone"
                android:text="Once you upload , cant change latter "
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/margin_12"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_marginRight="@dimen/margin_12"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/margin_1"
                    android:background="@drawable/green_button_background"
                     android:id="@+id/button_next_one"
                    android:textColor="@color/white" />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_button_background"
                    android:text="BANK SETTING"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:layout_margin="@dimen/margin_1"
                    android:id="@+id/button_update_bank"
                    android:textColor="@color/white" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>



