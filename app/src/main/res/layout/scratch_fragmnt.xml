<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/l1"
        android:background="@color/colorAccent"
        android:paddingLeft="@dimen/margin_4"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_weight="1"
            android:textSize="@dimen/margin_16"
            android:textColor="@color/black"
            android:text="Total Amount Win"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_10"
            android:textSize="@dimen/margin_16"
            android:background="@color/colorAccent"
            android:textColor="@color/black"
            android:id="@+id/title"
            android:text="Total Tokens Win"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/balancebar"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/l1"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_6"
            android:text="@string/Rs"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:gravity="center|top"
            android:textStyle="bold"

            android:textSize="@dimen/margin_24"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="@dimen/margin_24"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:id="@+id/tvTotal"
            android:textColor="@color/black"
            android:paddingBottom="@dimen/margin_14"
            android:text="00.00"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_6"
            android:text="sR"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:gravity="center|top"
            android:textStyle="bold"
            android:textSize="@dimen/margin_24"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/margin_24"
            android:layout_gravity="center"
            android:id="@+id/tvTotalSrt"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingBottom="@dimen/margin_14"
            android:text="00.00"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <com.tech.aicapital.ExpandableHeightGridView
        android:layout_width="match_parent"
        android:id="@+id/gridView2"
        android:layout_margin="@dimen/margin_1"
        android:layout_below="@+id/balancebar"
        android:numColumns="2"
        android:padding="@dimen/margin_2"
        android:layout_height="match_parent">
    </com.tech.aicapital.ExpandableHeightGridView>
</RelativeLayout>


</androidx.core.widget.NestedScrollView>