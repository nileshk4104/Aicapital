<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#DDDDDD"
    android:layout_height="match_parent">
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/layout"
        android:background="@color/colorBlueDark3"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="130sp"
            android:src="@drawable/srcoins"
            android:layout_marginTop="@dimen/margin_32"
            android:id="@+id/coin"
            android:layout_height="130sp"/>
        <TextView
            android:layout_width="match_parent"
            android:text="0.00"
            android:id="@+id/tvPurchaseBalance"
            android:textSize="@dimen/margin_32"
            android:paddingTop="@dimen/margin_8"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:text="SRUSHTII TOKENS"
            android:textStyle="bold"
            android:textSize="@dimen/margin_16"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:text="READ ARTICLES EVERY DAY AND EARN SRT. REEDIM YOUR SRT INTO FOLLOWING OPTIONS"
            android:textSize="@dimen/margin_10"
            android:paddingRight="@dimen/margin_40"
            android:paddingLeft="@dimen/margin_40"
            android:textColor="@color/white"
            android:layout_margin="@dimen/margin_4"
            android:layout_marginBottom="@dimen/margin_18"
            android:gravity="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="EARN 500 SRT"
            android:drawablePadding="@dimen/margin_10"
            android:padding="@dimen/margin_6"
            android:gravity="center"
            android:layout_margin="@dimen/margin_8"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_baseline_share_24"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/recyclerView"
        android:layout_below="@+id/layout"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:id="@+id/ivImageNodata"
            android:visibility="gone"
            android:src="@drawable/nodata"
            android:layout_height="wrap_content">

        </pl.droidsonroids.gif.GifImageView>

</RelativeLayout>
</androidx.core.widget.NestedScrollView>