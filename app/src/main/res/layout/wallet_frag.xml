<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:scrollbars="vertical"
    android:background="#EEEEEE"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/margin_12"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/margin_4"
                android:layout_height="wrap_content">
                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="@dimen/margin_60"
                    android:layout_gravity="center"
                    android:src="@drawable/aicc"
                    android:layout_margin="@dimen/margin_16"
                    android:background="@color/black"
                    android:layout_height="60sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="$0.00"
                    android:textColor="@color/black"
                    android:id="@+id/tvWalletBalance"
                    android:textSize="@dimen/margin_20"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="AVAILABLE BALANCE"
                    android:textColor="@color/black"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:textSize="@dimen/margin_10"
                    android:gravity="center"
                    android:layout_height="wrap_content" />



            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/margin_1"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/cardSelfPurchase"
                app:cardCornerRadius="@dimen/margin_12"
                android:layout_margin="@dimen/margin_8"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_10"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/margin_32"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_monetization_on_25"
                        android:layout_height="@dimen/margin_32"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="$ 0.00"
                        android:textSize="@dimen/margin_18"
                        android:id="@+id/tvTotalDeposit"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Total Deposit"
                        android:textSize="@dimen/margin_10"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content" />



                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/margin_12"
                android:layout_margin="@dimen/margin_8"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_10"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/margin_32"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_monetization_on_25"
                        android:layout_height="@dimen/margin_32"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:text="$ 0.00"
                        android:textSize="@dimen/margin_18"
                        android:id="@+id/tvTotalWithdraw"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Total Withdraw"
                        android:textSize="@dimen/margin_10"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_height="wrap_content" />



                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/margin_1"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/margin_12"
                android:layout_margin="@dimen/margin_8"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/margin_10"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/margin_32"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_monetization_on_25"
                        android:layout_height="@dimen/margin_32"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="$ 0.00"
                        android:id="@+id/tvTodaysProfit"
                        android:textColor="@color/black"
                        android:textSize="@dimen/margin_18"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Todays Profit"
                        android:textColor="@color/black"
                        android:textSize="@dimen/margin_10" />



                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/margin_12"
                android:layout_margin="@dimen/margin_8"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/margin_10"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/margin_32"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_monetization_on_25"
                        android:layout_height="@dimen/margin_32"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="$ 0.00"
                        android:id="@+id/tvTotalProfit"
                        android:textColor="@color/black"
                        android:textSize="@dimen/margin_18"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Total Profit"
                        android:textColor="@color/black"
                        android:textSize="@dimen/margin_10" />





                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/margin_1"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/margin_12"
                android:layout_margin="@dimen/margin_8"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_10"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/margin_32"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_insert_chart_24"
                        android:layout_height="@dimen/margin_32"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:text="0.0%"
                        android:textSize="@dimen/margin_18"
                        android:id="@+id/tvTotalGrowth"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Total Average"
                        android:textColor="@color/black"
                        android:textSize="@dimen/margin_10"
                        android:gravity="center"
                        android:layout_height="wrap_content" />



                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/margin_12"
                android:layout_margin="@dimen/margin_8"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_10"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/margin_32"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_percent_24"
                        android:layout_height="@dimen/margin_32"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:text="0.0%"
                        android:textSize="@dimen/margin_18"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:id="@+id/tvMonthlyRatio"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:text="This month Profit Ratio"
                        android:textColor="@color/black"
                        android:textSize="@dimen/margin_10"
                        android:gravity="center"
                        android:layout_height="wrap_content" />



                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/margin_1"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/cardShare"
                app:cardCornerRadius="@dimen/margin_12"
                android:layout_margin="@dimen/margin_8"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_16"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/ic_baseline_share_25"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Refer and Earn"
                        android:textColor="@color/black"
                        android:textSize="@dimen/margin_10"
                        android:gravity="center"
                        android:layout_height="wrap_content" />



                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/cardAbout"
                app:cardCornerRadius="@dimen/margin_12"
                android:layout_margin="@dimen/margin_8"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_16"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/ic_account_box_black_24dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:text="About Us"
                        android:textColor="@color/black"
                        android:textSize="@dimen/margin_10"
                        android:gravity="center"
                        android:layout_height="wrap_content" />



                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:padding="@dimen/margin_16"
            android:text="All rights are reserved @ www.aicapital.in"
            android:gravity="center"
            android:background="@color/white"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_margin="@dimen/margin_12"
            android:textSize="@dimen/margin_8"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>